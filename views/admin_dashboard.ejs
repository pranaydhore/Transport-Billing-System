

<div class="container mt-5">
  <h1 class="text-center text-primary mb-4">Admin Dashboard</h1>
  <p class="text-center">Welcome, <strong><%= username %></strong> (Admin)</p>

  <% if (!users || users.length === 0) { %>
    <div class="alert alert-info">No users registered yet.</div>
  <% } else { %>
    <% users.forEach(user => { %>
      <div class="card mb-4 shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= user.username %></h5>
          <span class="badge bg-primary">User ID: <%= user._id %></span>
        </div>
        <div class="card-body">
          <% if (userInvoices[user._id] && userInvoices[user._id].length > 0) { %>
            <table class="table table-hover table-striped">
              <thead class="table-dark">
                <tr>
                  <th>#</th>
                  <th>Client</th>
                  <th>Date</th>
                  <th>Total (₹)</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% userInvoices[user._id].forEach((invoice, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= invoice.clientName %></td>
                    <td><%= invoice.invoiceDate ? new Date(invoice.invoiceDate).toLocaleDateString() : "N/A" %></td>
                    <td>₹<%= invoice.totalAmount %></td>
                    <td>
                      <a href="/invoices/<%= invoice._id %>" class="btn btn-sm btn-primary">View</a>
                      <a href="/invoices/<%= invoice._id %>/pdf" target="_blank" class="btn btn-sm btn-secondary">PDF</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">No invoices for this user.</p>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>


