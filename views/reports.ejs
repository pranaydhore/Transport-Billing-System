<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Billing Dashboard - Ganeshay Transport</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Poppins', sans-serif;
      color: #333;
      /* padding-t/op: 20px; */
    }

    h2 {
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    p.lead {
      color: #6c757d;
    }

    .card {
      border-radius: 12px;
      transition: transform 0.2s, box-shadow 0.2s;
      height: 100%;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }

    canvas {
      margin-top: 15px;
    }
  </style>
</head>
<body>
<div class="container">

  <div class="row mb-4 text-center">
    <div class="col-12">
      <h2 class="text-primary">Billing Dashboard</h2>
      <p class="lead">Visual overview of your invoices and revenue.</p>
    </div>
  </div>

  <div class="row g-4">

    <!-- Monthly Revenue -->
    <div class="col-lg-6 col-md-12">
      <div class="card shadow-sm p-4 bg-white">
        <h5 class="text-center mb-3">Monthly Revenue (₹)</h5>
        <canvas id="revenueChart" height="250"></canvas>
      </div>
    </div>

    <!-- Invoice Status -->
    <div class="col-lg-6 col-md-12">
      <div class="card shadow-sm p-4 bg-white">
        <h5 class="text-center mb-3">Invoice Status</h5>
        <canvas id="statusChart" height="250"></canvas>
      </div>
    </div>

    <!-- Cumulative Revenue -->
    <div class="col-lg-6 col-md-12">
      <div class="card shadow-sm p-4 bg-white">
        <h5 class="text-center mb-3">Cumulative Revenue (₹)</h5>
        <canvas id="cumulativeChart" height="250"></canvas>
      </div>
    </div>

    <!-- Pending Invoices -->
    <div class="col-lg-6 col-md-12">
      <div class="card shadow-sm p-4 bg-white">
        <h5 class="text-center mb-3">Pending Invoices</h5>
        <canvas id="pendingChart" height="250"></canvas>
      </div>
    </div>

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Monthly Revenue Bar Chart
  const revenueCtx = document.getElementById('revenueChart').getContext('2d');
  const revenueGradient = revenueCtx.createLinearGradient(0, 0, 0, 400);
  revenueGradient.addColorStop(0, 'rgba(75, 192, 192, 0.7)');
  revenueGradient.addColorStop(1, 'rgba(54, 162, 235, 0.7)');

  new Chart(revenueCtx, {
    type: 'bar',
    data: {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
      datasets: [{
        label: 'Revenue',
        data: [12000, 15000, 8000, 20000, 18000, 22000],
        backgroundColor: revenueGradient,
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1,
        borderRadius: 8
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: { y: { beginAtZero: true }, x: { grid: { display: false } } }
    }
  });

  // Invoice Status Doughnut Chart
  new Chart(document.getElementById('statusChart'), {
    type: 'doughnut',
    data: {
      labels: ['Paid', 'Pending', 'Overdue'],
      datasets: [{
        data: [12, 5, 3],
        backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
        borderColor: '#fff',
        borderWidth: 2
      }]
    },
    options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
  });

  // Cumulative Revenue Line Chart
  new Chart(document.getElementById('cumulativeChart'), {
    type: 'line',
    data: {
      labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
      datasets: [{
        label: 'Cumulative Revenue',
        data: [12000, 27000, 35000, 55000, 73000, 95000],
        borderColor: '#4b6cb7',
        backgroundColor: 'rgba(75, 123, 255, 0.2)',
        tension: 0.3,
        fill: true,
        pointRadius: 5,
        pointBackgroundColor: '#4b6cb7'
      }]
    },
    options: {
      responsive: true,
      plugins: { legend: { display: false } },
      scales: { y: { beginAtZero: true } }
    }
  });

  // Pending Invoices Pie Chart
  new Chart(document.getElementById('pendingChart'), {
    type: 'pie',
    data: {
      labels: ['1-7 days', '8-15 days', '16+ days'],
      datasets: [{
        data: [5, 3, 2],
        backgroundColor: ['#ffc107', '#fd7e14', '#dc3545']
      }]
    },
    options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
  });
</script>
</body>
</html>
